<div class="well well-sm">
    <strong><%= t "Display" %></strong>
    <div class="btn-group">
        <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
        </span><%= t "list" %></a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
            class="glyphicon glyphicon-th"></span><%= t "grid" %></a>
    </div>
</div>
<div id="products" class="row list-group">
  <% @clubs.each do |club| %>
    <div class="item  col-xs-4 col-lg-4">
      <div class="thumbnail">
        <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
        <div class="caption">
          <h4 class="group inner list-group-item-heading">
              <%= link_to club.name, club_member_path(club) %></h4>
          <p class="group inner list-group-item-text">
              <%= club.description.truncate_words 10 %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
