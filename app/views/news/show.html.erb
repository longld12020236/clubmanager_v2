<section>
 <header class="main">
  <h1>Event: <%= @news.event.name %></h1>
  <div class="row">
    <div class="col-md-8"><h2><%= @news.title %></h2></div>
    <div class="col-md-4">
    <% if is_management? @news.event.club %>
      <%= link_to "Edit", edit_management_news_path(@news), class: "button small" %>
      <div class="space"></div>
      <%= link_to "Delete", management_news_path(@news),method: :delete, class: "button small",
        data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
  </div>
 </header>
 <div class="thin_border"><%= @news.content.html_safe %>
   <author><i>Post by:</i> <%= link_to @news.user.full_name, @news.user %></author>
 </div>
</section>
<section class="footer_news">
  <%= render "comments/index" %>
</section>
